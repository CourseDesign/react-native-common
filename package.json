{
  "name": "@course-design/react-native-common",
  "version": "0.1.0",
  "description": "common element for react native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "course-design-react-native-common.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "android": "cd example && npm run android",
    "ios": "cd example && npm run ios",
    "start": "cd example && npm run start",
    "bootstrap:example": "cd example && npm install",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "npm run bootstrap:example && npm install && npm run pods",
    "docs": "typedoc"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/Su-Yong/course-design-react-native-common",
  "author": "Su-Yong <simssy2205@gmail.com> (https://github.com/Su-Yong)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Su-Yong/course-design-react-native-common/issues"
  },
  "homepage": "https://github.com/Su-Yong/course-design-react-native-common#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@callstack/react-theme-provider": "^3.0.6",
    "react-native-iphone-x-helper": "^1.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.18.1",
    "release-it": "^14.2.2",
    "typedoc": "^0.21.9",
    "typedoc-plugin-rename-defaults": "^0.3.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended",
      "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars-experimental": "error",
      "no-restricted-syntax": "off",
      "no-param-reassign": "off",
      "linebreak-style": "off",
      "react/jsx-curly-brace-presence": [
        "warn",
        {
          "props": "always"
        }
      ],
      "no-bitwise": "off",
      "react/jsx-props-no-spreading": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "scripts/",
    "*.config.js"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
